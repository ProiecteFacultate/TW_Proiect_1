            <a href="contact.html" class="headerNavElement">Contact</a>

            <a href="#top" class="headerNavActualElement">Reviews</a>
        </nav>

    </header>

    <main>
        <h1 id="review-h6">&#9733 &#9733 &#9733 REVIEWS &#9733 &#9733 &#9733</h1>

        <div id="reviewsList">
            <% for(let comment of comments) { %>
                <d class="commentDiv">
                    <h3 class="commentAuthor">
                        <%= comment['Author']%>:
                    </h3>
                    <p class="commentText">
                        <%= comment['Comment']%>
                    </p>
                </d>

                <% } %>
        </div>

        <form autocomplete="off" id="commentForm">  
            <label for="comment">Comment:</label><br>
            <textarea type="text" name="comment" placeholder="Comment..." rows="4" cols="70" id="commentInput"></textarea><br><br>
            
            <button>Submit</button>
        </form>

    </main>

</body>

</html>